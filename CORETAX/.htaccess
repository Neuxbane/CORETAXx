# Enable rewrite engine
RewriteEngine On

# Redirect index.xhtml to index.php
RewriteRule ^index\.xhtml$ index.php [L]

# Set Permissions-Policy header for geolocation
<IfModule mod_headers.c>
    Header set Permissions-Policy "geolocation=(self \"https://coretax.epajak.id\"), camera=(self \"https://coretax.epajak.id\"), microphone=(self \"https://coretax.epajak.id\")"
</IfModule>

# Proper MIME type for HTML
<IfModule mod_mime.c>
    AddType text/html .xhtml
</IfModule>
